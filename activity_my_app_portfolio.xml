<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyAppPortfolio"
    android:id="@+id/button7"
    android:background="#8BC34A">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button"
        android:background="#311B92"
        android:layout_marginTop="63dp"
        style="?android:attr/borderlessButtonStyle"
        android:clickable="true"
        android:textColor="#FAFAFA"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="toastMethod"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Scores App"
        android:id="@+id/button2"
        android:background="#311B92"
        android:layout_below="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textColor="#FAFAFA"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="toastMethod"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button3"
        android:background="#311B92"
        android:layout_below="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textColor="#FAFAFA"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:onClick="toastMethod"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button4"
        android:background="#311B92"
        android:layout_below="@+id/button3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textColor="#FAFAFA"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="toastMethod"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button5"
        android:background="#311B92"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:textColor="#FAFAFA"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:onClick="toastMethod"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: My Own App"
        android:id="@+id/button6"
        android:background="#BF360C"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="55dp"
        android:clickable="true"
        android:onClick="toastMethod"
        android:layout_alignParentEnd="false" />

</RelativeLayout>
